<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.sixpro.ui.MainActivity">

    <include
        android:id="@+id/in_title"
        layout="@layout/activity_all_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <Button
            android:id="@+id/bt_change_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bt_start_location"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/x12"
            android:text="切换定位"/>
        <Button

            android:id="@+id/bt_start_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x12"
            android:text="开始定位"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



</LinearLayout>
